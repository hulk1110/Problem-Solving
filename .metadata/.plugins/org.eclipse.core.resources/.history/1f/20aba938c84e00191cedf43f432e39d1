package com.java8;

import java.util.Arrays;
import java.util.List;
import java.util.function.Consumer;

public class ConsumerInterfaceDemo {

	public static void main(String[] args) {

		Consumer<Integer> consumer = (Integer i) -> {
			System.out.println("the number is" + i);
		};

		consumer.accept(56);
		
		List<Integer> arrayOfNo = Arrays.asList(1,11,22,43);
		arrayOfNo.stream().forEach(consumer);
		
		// alternatively we can write as
		arrayOfNo.stream().forEach(consumer2->System.out.println(consumer2));
		
	}
}
